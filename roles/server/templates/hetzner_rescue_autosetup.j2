DRIVE1 /dev/{{ hetzner_server_disk1 }}
DRIVE2 /dev/{{ hetzner_server_disk2 }}

SWRAID 1
SWRAIDLEVEL 0

BOOTLOADER grub

HOSTNAME {{ hetzner_server_hostname }}

PART /boot ext4 1024M
PART lvm vg0 all

LV vg0 root            /               xfs  40G
LV vg0 swap            swap            swap 8G
LV vg0 home            /home           xfs  30G
LV vg0 tmp             /tmp            xfs  5G
LV vg0 var             /var            xfs  50G
LV vg0 libvirt /var/lib/libvirt/images xfs  {{ hetzner_server_size_of_libvirt_images}}

IMAGE {{ hetzner_server_image }}